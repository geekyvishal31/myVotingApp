<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>
  <link rel="stylesheet" href="options.css">
  <title>My Voting App</title>
</head>
<body>
  <div class="poll-box custom-box">
      <div class="stats">
        <div class="vote-count">
          <span class="span-count">Vote-count:</span>
          <div class="count">{{voteCount}}</div>
        </div>
        <div class="posted-by">
          <span class="post-text">Posted By:</span>
          <span class="author-name">{{postedBy}}</span>
        </div>
      </div>
      <div class="question-box">
        <div class="question-text">{{question}}</div>
      </div>      
      <div class="option-box">
        {{#each option}}
        <div class="options" onclick="location.href='/updateVote?oid={{_id}}&qid={{@root.qId}}'">
         {{name}}
        </div>
        {{/each}}
      </div>
      <div class="do-vote">
        <button type="button" class="do-vote-btn btn">Click on Option to Vote</button>
      </div>
  </div>
  <div class="chart-box">
    <h3 class="chart-text">Polling Chart</h3>
            <div class="chart">
                <canvas id="mypollingChart" width="400" height="400"></canvas>
            </div>
  </div>
</body>
<script>
    let mpChart = document.getElementById('mypollingChart').getContext('2d');
    let label = "{{votelabel}}";
    console.log(label);
    label = label.split(',');
    let ds = "{{votecount}}";
    console.log(ds);
    let mypollingChart = new Chart(mpChart,{
        type:'doughnut',
        data: {
            labels: label,
            datasets: [{
                data:[{{votecount}}],
                backgroundColor: [
                    'rgba(39, 44, 145, 1)',
                    'rgba(170, 42, 14, 1)',
                    'rgba(173, 11, 151, 1)',
                    'rgba(64, 110, 7, 1)',
                    'rgba(7, 95, 110, 1)',
                    'rgba(80, 74, 37, 1)',
                ],

            }],
        },      options:{    responsive: true,
                             maintainAspectRatio: false,
                        }
    });
</script>

</html>




























